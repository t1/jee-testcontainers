<?xml version="1.0" encoding="UTF-8"?>
<server description="new server">
    <featureManager>
        <feature>javaee-8.0</feature>
        <feature>microProfile-3.0</feature>
    </featureManager>

    <basicRegistry
            id="basic"
            realm="BasicRealm">
    </basicRegistry>

    <httpEndpoint
            id="defaultHttpEndpoint"
            httpPort="8080"
            httpsPort="8443"
            host="*"/>
    <applicationManager
            autoExpand="true"/>

    <logging
            isoDateFormat="true"
            consoleLogLevel="info"
            consoleSource="message,trace"
            consoleFormat="json"
    />
</server>
